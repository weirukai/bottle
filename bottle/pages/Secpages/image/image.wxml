<import src="../../common/head.wxml" />


<view class="container">
  <template is="head" data="{{title: '心愿瓶——记录你的心灵之声'}}"/>
  <view class="page-body">
    <view class="page-section">
      <view class="page-body-info">
        <block wx:if="{{tempFilePath != ''}}">
          <image src="{{tempFilePath}}" class="image" mode="aspectFit"></image>
        </block>
        <block wx:if="{{tempFilePath === '' && savedFilePath != ''}}">
          <image src="{{savedFilePath}}" class="image" mode="aspectFit"></image>
        </block>
        <block wx:if="{{tempFilePath === '' && savedFilePath === ''}}">
          <view class="image-plus image-plus-nb" bindtap="chooseImage">
            <view class="image-plus-horizontal"></view>
            <view class="image-plus-vertical"></view>
          </view>
          <view class="image-plus-text">请选择图片（相册或来自相机拍摄）</view>
        </block>
      </view>
      <view class="btn-area">
        <button class='goodbutton'  hover-class="hover" bindtap="saveFile">保存图片</button>
        <button class='goodbutton1'  hover-class="hover" bindtap="clear">删除图片</button>
      </view>
    </view>
   
  </view>

  <modal title="{{dialog.title}}" hidden="{{dialog.hidden}}" no-cancel bindconfirm="confirm">{{dialog.content}}</modal>

 
</view>
